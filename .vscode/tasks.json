{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Intel: C/C++: g++-11 build active file",
			"command": "/usr/bin/arch -x86_64 /usr/local/bin/g++-11",
			"args": [
				"-fdiagnostics-color=always",
				"-std=c++20",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
				// "cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			// "group": "build",
			"detail": "Task generated by Debugger."
			// "detail": "compiler: /usr/bin/g++-11"
		},
		{
			"type": "shell",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++20",
				"-stdlib=libc++",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
				// "cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			// "group": "build",
			"detail": "Task generated by Debugger."
			// "detail": "compiler: /usr/bin/clang++"
		}
	]
}